@page "{id:int?}"
@model Web.Pages.ViewMeetingModel
@{
    ViewData["Title"] = "Просмотреть мероприятие";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Платформа мероприятий</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @{
        await Html.RenderPartialAsync("Header");
    }
    <main class="main-content">
        <div class="container">
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div id="toast-container" class="toast-container"></div>
                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        if (typeof toastManager !== 'undefined') {
                            toastManager.warning('@Html.Raw(Model.StatusMessage)');
                        }
                    });
                </script>
            }

            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-8">
                    @if (Model.Meeting != null && Model.Meeting.Id > 0)
                    {
                        <!-- Modern header section with back button and meeting title -->
                        <div class="meeting-view-header">
                            <a href="/Account" class="back-link">
                                <!-- SVG иконка стрелки влево -->
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="19" y1="12" x2="5" y2="12"></line>
                                    <polyline points="12 19 5 12 12 5"></polyline>
                                </svg>
                                <span>Назад к списку</span>
                            </a>
                            <h1 class="meeting-view-title">@Model.Meeting.Title</h1>
                            <p class="meeting-view-id">
                                <!-- SVG иконка хештега -->
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="4" y1="9" x2="20" y2="9"></line>
                                    <line x1="4" y1="15" x2="20" y2="15"></line>
                                    <line x1="10" y1="3" x2="8" y2="21"></line>
                                    <line x1="16" y1="3" x2="14" y2="21"></line>
                                </svg>
                                ID: @Model.Meeting.Id
                            </p>
                        </div>

                        <!-- Modern card layout with info sections -->
                        <div class="meeting-details-card">
                            <!-- Description Section -->
                            <div class="detail-section">
                                <div class="detail-label">
                                    <!-- SVG иконка документа -->
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                        <polyline points="14 2 14 8 20 8"></polyline>
                                        <line x1="16" y1="13" x2="8" y2="13"></line>
                                        <line x1="16" y1="17" x2="8" y2="17"></line>
                                        <polyline points="10 9 9 9 8 9"></polyline>
                                    </svg>
                                    <span>Описание</span>
                                </div>
                                <div class="detail-content">
                                    @Model.Meeting.Description
                                </div>
                            </div>

                            <!-- Date and Time Section -->
                            <div class="detail-section">
                                <div class="detail-label">
                                    <!-- SVG иконка календаря -->
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                    </svg>
                                    <span>Дата и время</span>
                                </div>
                                <div class="detail-content highlight-text">
                                    @Model.Meeting.Date.ToLocalTime().ToString("dd MMMM yyyy, HH:mm")
                                </div>
                            </div>

                            <!-- Meeting Link Section -->
                            <div class="detail-section">
                                <div class="detail-label">
                                    <!-- SVG иконка ссылки -->
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                                        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
                                    </svg>
                                    <span>Ссылка на мероприятие</span>
                                </div>
                                <div class="meeting-link-wrapper">
                                    <div class="meeting-link-display">
                                        <input type="text" class="link-input" value="@Model.Meeting.Link" readonly onclick="this.select()">
                                        <button class="copy-link-btn" onclick="copyToClipboard('@Model.Meeting.Link')">
                                            <!-- SVG иконка копирования -->
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                                                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                                            </svg>
                                        </button>
                                    </div>
                                    <a href="@Model.Meeting.Link" target="_blank" class="btn btn-primary btn-join-meeting">
                                        <!-- SVG иконка внешней ссылки -->
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                                            <polyline points="15 3 21 3 21 9"></polyline>
                                            <line x1="10" y1="14" x2="21" y2="3"></line>
                                        </svg>
                                        Перейти к мероприятию
                                    </a>
                                </div>
                                <p class="detail-hint">Поддерживаются Zoom, Teams, Google Meet и другие платформы</p>
                            </div>

                            <!-- Join Meeting Button -->
                            @if (!Model.isManager)
                            {
                                <div class="detail-section">
                                    @if (!Model.isParticipant)
                                    {
                                        <form method="post"
                                              action="/ViewMeeting/@Model.Meeting.Id?handler=JoinMeeting"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="MeetingId" value="@Model.Meeting.Id" />
                                            <button type="submit" class="btn btn-success btn-join">
                                                Участвовать
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post"
                                              action="/ViewMeeting/@Model.Meeting.Id?handler=RefuseMeeting"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="MeetingId" value="@Model.Meeting.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                Отказаться от участия
                                            </button>
                                        </form>
                                    }
                                </div>
                            }


                            <!-- Section for participant count and list -->
                            <div class="detail-section">
                                <div class="detail-label">
                                    <!-- SVG иконка пользователей -->
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="9" cy="7" r="4"></circle>
                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                    </svg>
                                    <span>Участники (@Model.ParticipantCount)</span>
                                </div>
                                <div class="detail-content">
                                    @if (Model.MeetingParticipants.Any())
                                    {
                                        @if(Model.isManager)
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-sm">
                                                    <thead>
                                                        <tr>
                                                            <th>Эл. почта</th>
                                                            <th>Имя пользователя</th>
                                                            <th>Удалить</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var participant in Model.MeetingParticipants)
                                                        {
                                                            <tr>
                                                                <td hidden>@participant.UserId</td>
                                                                <td>@participant.Email</td>
                                                                <td>@participant.Username</td>
                                                                <td>
                                                                    <form method="post"
                                                                          action="/ViewMeeting/@Model.Meeting.Id?handler=RemoveParticipant"
                                                                          class="d-inline">
                                                                        @Html.AntiForgeryToken()
                                                                        <input type="hidden" name="ParticipantId" value="@participant.UserId" />
                                                                        <input type="hidden" name="MeetingId" value="@Model.Meeting.Id" />
                                                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                                                onclick="return confirm('Вы уверены удалить пользователя @participant.Username из участников?');">
                                                                            Удалить
                                                                        </button>
                                                                    </form>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>

                                        }
                                    }
                                    else
                                    {
                                        <p class="text-muted">Пока никто не записался на это мероприятие.</p>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Modern error state -->
                        <div class="error-state-card">
                            <div class="error-icon">
                                <!-- SVG иконка предупреждения -->
                                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <line x1="12" y1="8" x2="12" y2="12"></line>
                                    <line x1="12" y1="16" x2="12.01" y2="16"></line>
                                </svg>
                            </div>
                            <h3>Мероприятие не найдено</h3>
                            <p>Не удалось загрузить данные мероприятия. Возможно, оно было удалено или у вас нет доступа.</p>
                            <a href="/Account" class="btn btn-primary">
                                <!-- SVG иконка дома -->
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9,22 9,12 15,12 15,22"></polyline>
                                </svg>
                                Вернуться в аккаунт
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>

    <!-- Added copy to clipboard functionality -->
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                if (typeof toastManager !== 'undefined') {
                    toastManager.success('Ссылка скопирована в буфер обмена!');
                } else {
                    alert('Ссылка скопирована!');
                }
            }, function(err) {
                if (typeof toastManager !== 'undefined') {
                    toastManager.error('Не удалось скопировать ссылку');
                } else {
                    alert('Ошибка копирования');
                }
            });
        }
    </script>
</body>
</html>