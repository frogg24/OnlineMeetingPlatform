@using Microsoft.AspNetCore.Http

<header class="main-header">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center py-3">
            <!-- Логотип / Название сайта -->
            <a href="/" class="logo">Платформа мероприятий</a>

            <!-- Навигация -->
            <nav>
                @{
                    var authToken = Context.Request.Cookies["AuthToken"];
                    var isLoggedIn = !string.IsNullOrEmpty(authToken);

                    var username = Context.Request.Cookies["Username"];
                    var userEmail = Context.Request.Cookies["UserEmail"];

                    var displayName = !string.IsNullOrEmpty(username)
                    ? username
                    : !string.IsNullOrEmpty(userEmail)
                    ? userEmail
                    : "Пользователь";
                }
                @if (isLoggedIn)
                {
                    <div class="d-flex align-items-center gap-3">
                        <span class="me-2">@displayName</span>
                        <a href="/Account" class="btn btn-link p-0">
                            
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; font-size: 14px;">
                                @displayName[0].ToString().ToUpper()
                            </div>
                        </a>
                        <a href="/Home/Logout" class="btn btn-outline-primary btn-sm">Выйти</a>
                    </div>
                }
                else
                {
                    <div class="header-buttons">
                        <a href="/Register" class="btn btn-outline-primary btn-sm active">Регистрация</a>
                        <a href="/Login" class="btn btn-primary btn-sm">Вход</a>
                    </div>
                }
            </nav>
        </div>
    </div>
</header>