@using Microsoft.AspNetCore.Http

<header class="main-header">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center py-3">
            <!-- Логотип / Название сайта -->
            <a href="/" class="logo">Платформа мероприятий</a>

            <!-- Навигация -->
            <nav>
                @{
                    var isLoggedIn = false;
                }
                @if (isLoggedIn)
                {
                    <div class="d-flex align-items-center gap-3">
                        <a href="/Participant/Dashboard" class="btn btn-link p-0">
                            <img src="https://via.placeholder.com/32" alt="Profile" class="rounded-circle" style="width: 32px; height: 32px;">
                        </a>
                        <a href="/Account/Logout" class="btn btn-outline-primary btn-sm">Выйти</a>
                    </div>
                }
                else
                {
                    <div class="header-buttons">
                        <a href="/Register" class="btn btn-outline-primary btn-sm active">Регистрация</a>
                        <a href="/Login" class="btn btn-primary btn-sm">Вход</a>
                    </div>
                }
            </nav>
        </div>
    </div>
</header>