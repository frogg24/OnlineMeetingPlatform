@page
@model Web.Pages.IndexModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Главная";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Платформа мероприятий</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
</head>
<body>
    @{
        await Html.RenderPartialAsync("Header");
    }

    <main class="main-content">
        <div class="container">
            <div class="hero-section text-center py-5">
                <h1 class="display-4 fw-bold">Добро пожаловать на платформу мероприятий!</h1>
                <p class="lead">Найдите и присоединитесь к интересным мероприятиям</p>

                <div class="mt-4">
                    @if (HttpContext.Request.Cookies["AuthToken"] != null && !string.IsNullOrEmpty(HttpContext.Request.Cookies["AuthToken"]))
                    {
                        <a href="/Account" class="btn btn-primary btn-lg me-2">Перейти в личный кабинет</a>
                    }
                    else
                    {
                        <a href="/Register" class="btn btn-primary btn-lg me-2">Зарегистрироваться</a>
                        <a href="/Login" class="btn btn-outline-primary btn-lg">Войти</a>
                    }
                </div>
            </div>

            <!-- Секция с последними мероприятиями -->
            <div class="events-section py-5">
                <h2 class="mb-4">В скором времени:</h2>
                <div class="row">
                    @if (Model.RecentMeetings != null && Model.RecentMeetings.Any())
                    {
                        @foreach (var meeting in Model.RecentMeetings)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">@meeting.Title</h5>
                                        <p class="card-text text-muted">
                                            <small>
                                                <i data-feather="calendar"></i>
                                                @meeting.Date.ToString("dd.MM.yyyy HH:mm")
                                            </small>
                                        </p>
                                        <p class="card-text flex-grow-1">@(meeting.Description.Length > 100 ? meeting.Description.Substring(0, 100) + "..." : meeting.Description)</p>
                                        <div class="mt-auto">
                                            <a href="/ViewMeeting/@meeting.Id" class="btn btn-outline-primary">Подробнее</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="alert alert-info">
                                На данный момент нет доступных мероприятий. Будьте первым, кто создаст мероприятие!
                            </div>
                        </div>
                    }
                </div>
                <h5 class="mb-3 text-center">
                    <a href="/Meetings" class="white-link">Больше мероприятий</a>
                </h5>
            </div>
        </div>
    </main>

    <script>
        feather.replace();
    </script>
</body>
</html>