@page
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Главная";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Платформа мероприятий</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
</head>
<body>
    @{
        await Html.RenderPartialAsync("Header");
    }

    <main class="main-content">
        <div class="container">
            <div class="hero-section text-center py-5">
                <h1 class="display-4 fw-bold">Добро пожаловать на платформу мероприятий!</h1>
                <p class="lead">Найдите и присоединитесь к интересным мероприятиям</p>

                <div class="mt-4">

                    @if (HttpContext.Request.Cookies["AuthToken"] != null && !string.IsNullOrEmpty(HttpContext.Request.Cookies["AuthToken"]))
                    {
                        <a href="/Account" class="btn btn-primary btn-lg me-2">Перейти в личный кабинет</a>
                    }
                    else
                    {
                        <a href="/Register" class="btn btn-primary btn-lg me-2">Зарегистрироваться</a>
                        <a href="/Login" class="btn btn-outline-primary btn-lg">Войти</a>
                    }
                </div>
            </div>

            <!-- Пример секции с мероприятиями -->
            <div class="events-section py-5">
                <h2 class="mb-4">Наши мероприятия</h2>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Мероприятие 1</h5>
                                <p class="card-text">Описание мероприятия 1</p>
                                <a href="#" class="btn btn-outline-primary">Подробнее</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Мероприятие 2</h5>
                                <p class="card-text">Описание мероприятия 2</p>
                                <a href="#" class="btn btn-outline-primary">Подробнее</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Мероприятие 3</h5>
                                <p class="card-text">Описание мероприятия 3</p>
                                <a href="#" class="btn btn-outline-primary">Подробнее</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Инициализация Feather Icons
        if (typeof feather !== 'undefined') {
            feather.replace();
        }
    </script>
</body>
</html>